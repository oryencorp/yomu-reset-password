<!-- Firebase -->
<script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
  import { getAuth, verifyPasswordResetCode, confirmPasswordReset } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";

  // üî• Configura√ß√£o do teu Firebase
  const firebaseConfig = {
    apiKey: "AIzaSyANayvc0KmsS9AOM53rgJJXsS_G4uSUA9E",
    authDomain: "yomu-9645d.firebaseapp.com",
    databaseURL: "https://yomu-9645d-default-rtdb.firebaseio.com",
    projectId: "yomu-9645d"
  };

  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);

  const params = new URLSearchParams(window.location.search);
  const oobCode = params.get('oobCode');

  // Exibir formul√°rio se o link for v√°lido
  verifyPasswordResetCode(auth, oobCode)
    .then(() => {
      document.getElementById('reset-form').style.display = 'flex';
    })
    .catch(() => {
      document.getElementById('message').textContent = '‚ùå Este link √© inv√°lido ou expirou.';
    });

  // Fun√ß√£o para redefinir senha
  window.resetPassword = async () => {
    const pass = document.getElementById('new-password').value.trim();
    const confirm = document.getElementById('confirm-password').value.trim();
    const msg = document.getElementById('message');

    if (!pass || !confirm) {
      msg.textContent = 'Preencha todos os campos.';
      return;
    }

    if (pass !== confirm) {
      msg.textContent = 'As senhas n√£o coincidem.';
      return;
    }

    try {
      await confirmPasswordReset(auth, oobCode, pass);
      msg.style.color = '#00ff7f';
      msg.textContent = '‚úÖ Senha redefinida com sucesso!';
      document.getElementById('reset-form').style.display = 'none';
    } catch (err) {
      msg.textContent = '‚ùå Ocorreu um erro ao redefinir sua senha.';
    }
  };
</script>

